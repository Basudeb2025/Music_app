<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".First">

    <!-- TODO: Update blank fragment layout -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/Recycle1"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_width="match_parent"
                tools:listitem="@layout/customitem"
                android:layout_height="@dimen/_160sdp"
                />
            <LinearLayout
                android:layout_marginTop="@dimen/_28sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/news"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:text="Hit songs"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sdp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View all"
                    android:textColor="@color/purple_500"
                    android:textSize="@dimen/_14sdp"
                    android:layout_marginStart="@dimen/_168sdp"
                    />
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler2"
                android:layout_marginTop="@dimen/_11sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                tools:listitem="@layout/smaleitems"
                />
            <LinearLayout
                android:layout_marginTop="@dimen/_28sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:text="Evening songs"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sdp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View all"
                    android:textColor="@color/purple_500"
                    android:textSize="@dimen/_14sdp"
                    android:layout_marginStart="@dimen/_131sdp"
                    />
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler3"
                android:layout_marginTop="@dimen/_11sdp"
                android:layout_width="match_parent"
                tools:listitem="@layout/smaleitems"
                android:layout_height="@dimen/_100sdp"
                />
            <LinearLayout
                android:layout_marginTop="@dimen/_28sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:text="Rappers song"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sdp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View all"
                    android:textColor="@color/purple_500"
                    android:textSize="@dimen/_14sdp"
                    android:layout_marginStart="@dimen/_141sdp"
                    />
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler4"
                android:layout_marginTop="@dimen/_11sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                tools:listitem="@layout/smaleitems"
                />
            <LinearLayout
                android:layout_marginTop="@dimen/_28sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:text="Old songs"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sdp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View all"
                    android:textColor="@color/purple_500"
                    android:textSize="@dimen/_14sdp"
                    android:layout_marginStart="@dimen/_168sdp"
                    />
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler5"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_11sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                tools:listitem="@layout/smaleitems"
                />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>