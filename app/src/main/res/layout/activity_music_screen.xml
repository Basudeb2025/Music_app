<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/music"
    tools:context=".music_screen">

        <TextView
            android:id="@+id/song_name"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ye lerki pagol he-badsah song"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_4sdp"
            android:textSize="@dimen/_21sdp"
            android:textColor="@color/white"
            />
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="@dimen/_48sdp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/m_image"
        android:layout_width="@dimen/_180sdp"
        android:layout_height="@dimen/_180sdp"
        android:layout_gravity="center"
        android:elevation="@dimen/_11sdp"
        android:src="@drawable/img_1"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF3700B3"/>
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="@dimen/_48sdp"
        android:id="@+id/control"
        android:layout_height="@dimen/_58sdp"
        android:layout_gravity="center"
        android:src="@drawable/baseline_pause_24"
        app:civ_border_width="2dp"
        app:civ_border_color="#C5C0CF"/>
    <SeekBar
        android:id="@+id/seek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:outlineAmbientShadowColor="@color/white"
        android:scrollbarSize="@dimen/_11sdp"
        />
    <LinearLayout
        android:layout_marginTop="@dimen/_11sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="@dimen/_48sdp"
            android:id="@+id/backward"
            android:layout_height="@dimen/_58sdp"
            android:layout_marginStart="@dimen/_50sdp"
            android:layout_gravity="center"
            android:src="@drawable/baseline_fast_rewind_24"
            app:civ_border_width="2dp"
            app:civ_border_color="#614797"/>
       <ImageView
           android:id="@+id/fav"
           android:layout_marginStart="@dimen/_30sdp"
           android:layout_width="@dimen/_48sdp"
           android:layout_height="@dimen/_58sdp"
           android:src="@drawable/baseline_favorite_border_24"
           />
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginStart="@dimen/_30sdp"
            android:id="@+id/forward"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="@dimen/_48sdp"
            android:layout_height="@dimen/_58sdp"
            android:layout_gravity="center"
            android:src="@drawable/baseline_fast_forward_24"
            app:civ_border_width="2dp"
            app:civ_border_color="#C5C0CF"/>
    </LinearLayout>
</LinearLayout>